BlogCard {
  box-shadow: var(--highlight) 0px 0px 10px
  margin: 2rem 0
  border: 1px solid var(--highlight)

  display: flex
  flex-direction: column

  div.content {
    display: flex
    flex-direction: row
    flex-grow: 1

    cursor: pointer


    div.Thumbnail {
      margin-right: 1rem
    }

    div.text {
      padding: .5rem
      div.summary {
      }
      div.read {
        margin-top: 1rem
        text-decoration: underline
      }
    }

  }
  background-color: var(--background)
}

Thumbnail {
  min-width: 20rem 
  width: 20rem
  min-height: 10rem
  /* height: 10rem */

  -empty {
    color: var(--background)
    font-size: 1.8rem
    opacity: .8

    display: flex
    justify-content: center
    align-items: center
  }
}

